<% obj.each do |post| %>
    <article class="post-card mt-3">
        <section class="post-head"git >
            <h2><%= link_to post.title, post_path(post) %></h2>
            <small>
                <time><%= post.created_at.to_date.strftime("%d %B, %Y") %></time>
                |
                <%= link_to 'Edit', edit_post_path(post) %>
                |
                <%= link_to 'Delete', post_path(post), method: :delete, data: {confirm: "Are Your sure?"}%>
            </small>
        </section>
        <section class="post-summary">
            <%= post.summary %>
        </section>
    </article>
<% end %>